{
  "author": "Shiokiriyama",
  "bugs": {
    "url": "https://github.com/shiokiriyama/shiokiriyama.github.io/issues"
  },
  "devDependencies": {
    "browserify": "^17.0.1",
    "fs-extra": "^11.3.2",
    "nodemon": "^3.1.11",
    "npm-run-all": "^4.1.5",
    "sass": "^1.94.0",
    "typescript": "^5.9.3"
  },
  "description": "The source files of Shiokiriyama website.",
  "engines": {
    "node": ">=20 <25"
  },
  "homepage": "https://shiokiriyama.github.io/",
  "license": "MIT",
  "name": "shiokiriyama.github.io",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/shiokiriyama/shiokiriyama.github.io.git"
  },
  "scripts": {
    "build:minify": "node bin/htmlminify.js",
    "build:rewrite": "node bin/rewrite.js",
    "build:sass": "sass src/scss/style.scss docs/css/style.min.css --style=compressed",
    "build:ts": "tsc",
    "copy": "node bin/copy.js",
    "dev": "npm-run-all --parallel watch:sass watch:ts server",
    "server": "nodemon --watch bin/server.js --watch docs --ext js,json,html --exec \"node bin/server.js\"",
    "watch:sass": "sass src/scss/style.scss docs/css/style.min.css --style=compressed --watch",
    "watch:ts": "tsc --watch"
  },
  "type": "module",
  "version": "0.2.1"
}
